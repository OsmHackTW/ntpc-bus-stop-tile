Map {
  background-color: transparent;
}

#stops {
  marker-width: 3;
  marker-fill: #00FF00;
  marker-line-color: #FFFFFF;
  marker-allow-overlap: true;
}

#stop-group {
  polygon-fill: #FFDDDD;
  polygon-opacity: 0.5;
  polygon-smooth: 0.3;
  line-width: 1;
  line-color: red;
  text-name: [name];
  text-face-name: 'Noto Sans CJK TC Regular';
  text-size: 12;
  text-fill: yellow;
  text-dx: 5;
}
